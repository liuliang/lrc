<div class="box">
  <table class="table border">
    <caption><%= @user.login %></caption>
    <tbody>
      <tr>
        <td>id</td>
        <td><%= @user.id %></td>
      </tr>
      <tr class="tr3">
        <td>登录名</td>
        <td><%= @user.login %></td>
      </tr>
      <tr>
        <td>Email</td>
        <td><%= @user.email %></td>
      </tr>
      <tr  class="tr3">
        <td>用户名</td>
        <td><%= @user.name %></td>
      </tr>
      <tr>
        <td>权限</td>
        <td><%= @user.roles.collect{|r| r.name }.join(',') %></td>
      </tr>
      <tr  class="tr3">
        <td >创建时间</td>
        <td><%= @user.created_at.strftime("%Y-%m-%d") %></td>
      </tr>
      <tr>
        <td >操作</td>
        <td>
          <%= link_to '修改',edit_admin_user_path(@user),:class=>"btt bttb" %>
          <%= link_to '删除',admin_user_path(@user),:confim=>'确定',:method=>'destroy',:class=>"btt" %>
        </td>
      </tr>
    </tbody>
  </table>
</div>
